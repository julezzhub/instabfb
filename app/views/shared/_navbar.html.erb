<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= 'navbar-trans fixed-top' if root_path  %>" style="background: linear-gradient(rgba(198,206,210,0.2) 1%, rgba(250,242,244,0.2) 100%) no-repeat 50% 50% / 100% 100%">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "photographer.png", class: "logo" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item" style="padding-right: 8px">
          <%= link_to "Become a Boyfriend", new_boyfriend_path(current_user), class: "nav-link nav-btn" %>
        </li>
        <li class="nav-item" style="padding-right: 5px">
          <%= link_to "Browse", boyfriends_path , class: "nav-link nav-color" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My relationships", account_booking_path(current_user), class: "dropdown-item" %>
            <%= link_to "Account", "#", class: "dropdown-item" %>
            <%= link_to "Refer Boyfriends", "#", class: "dropdown-item" %>
            <%= link_to "Gift a Boyfriend", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
