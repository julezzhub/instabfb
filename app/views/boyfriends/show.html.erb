<div class="main-containerShow">

  <h1><%= @boyfriend.name %></h1>
<div id="carouselBoyfriend" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" style="height: 600px">
      <% @images.each_with_index do |photo, index| %>
      <% if index == 0 %>
          <div class="carousel-item active">
            <img src="<%= photo.link %>" class="d-block w-100" alt="...">
          </div>
        <% else %>
          <div class="carousel-item">
            <img src="<%= photo.link %>" class="d-block w-100" alt="...">
          </div>
        <% end %>
      <% end %>
    <a class="carousel-control-prev" href="#carouselBoyfriend" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselBoyfriend" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <br>
    <div>
    <h4>Description</h4>
    <p><%= @boyfriend.description %></p>
    <br>
    <h4>Details</h4>
    <div class="details-flexbox">
      <% if @boyfriend.likes != nil  %>
        <div class="card-product">
          <img src="instaheart.png" />
          <div class="card-product-infos">
          <h1>Likes</h1>
          <p>  <%= @boyfriend.likes %> </p>
         </div>
        </div>
        <% end %>
      <% if @boyfriend.location != nil  %>
        <div class="card-product">
          <img src="pin.png" />
          <div class="card-product-infos">
          <h1>Location</h1>
          <p>  <%= @boyfriend.location %> </p>
         </div>
        </div>
        <% end %>
      <% if @boyfriend.height != nil  %>
        <div class="card-product">
          <img src="height-icon.png" />
          <div class="card-product-infos">
          <h1>Height</h1>
          <p> <%= @boyfriend.height %> </p>
        </div>
        </div>
        <% end %>
      <% if @boyfriend.smartphone_model != nil  %>
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
          <h1>Smartphone</h1>
          <p> <%= @boyfriend.smartphone_model %> </p>
         </div>
        </div>
      <% end %>
      <% if @boyfriend.pet != nil  %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
        <h1>Pet</h1>
        <p> <%= @boyfriend.pet %></p>
        </div>
      </div>
      <% end %>
      <% if @boyfriend.category != nil  %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
        <h1>Category</h1>
        <p> <%= @boyfriend.category %> </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <br>
  <h3>Reviews</h3>
  <% if @boyfriend.reviews.empty? %>
  <p>Let us know how <%= @boyfriend.name %> was!</p>
  <% else %>
  <ul class="list-group">
    <% @boyfriend.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span class="badge-stretch badge-pill">
        <% counter = 0 %>
        <% 5.times do %>
        <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
        <% counter += 1 %>
        <% end %>
      </span>
      <%= review.description %>
    </li>
    <% end %>
  </ul>
  <% end %>
  <%= render "reviews/new", boyfriend: @boyfriend, review: @review %>
  <br>
  <%= link_to 'Back to Boyfriends Overview', boyfriends_path %>
  <br>
  <%= link_to 'Book this Boyfriend', new_boyfriend_booking_path(@boyfriend) %>
</div>
